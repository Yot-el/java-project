<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>

<fx:root type="javafx.scene.layout.FlowPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" hgap="5">
  <Label style="-fx-font-size: 16px; -fx-text-fill: black;" fx:id="layerName"></Label>
  <Button style="-fx-font-size: 10px;" onMouseClicked="#deleteLayer">Delete</Button>
  <Button style="-fx-font-size: 10px;" onMouseClicked="#setCurrentLayer">Set active</Button>
  <Slider onValueChange="#setLayerOpacity" value="1.0" max="1.0" min="0.0"></Slider>
</fx:root>